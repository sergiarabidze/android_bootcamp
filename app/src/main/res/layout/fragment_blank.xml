<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateAccount"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/back_arrow_main"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:id="@+id/back_arrow_fragment"
        app:layout_constraintHorizontal_bias="0.04"
        android:background="@android:color/transparent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/funica_logo_id"
        android:src="@drawable/funica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_arrow_fragment"
        android:scaleType="centerCrop"
        android:layout_marginTop="32dp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/funica_logo_id"
        android:textSize="40sp"
        android:text="@string/create_your_account"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_corner_edit_text"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="12sp"
        android:drawableTint="@color/gray"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_id" />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_id"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_corner_edit_text"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:drawableStart="@drawable/log_in_icon"
        android:drawableTint="@color/gray"
        android:textColor="@color/black"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:inputType="textPassword"
        android:drawablePadding="12sp"
        android:hint="@string/password"
        android:id="@+id/password_id"
        android:maxLines="1"
        />
    
    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/eye_id"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/eye"
        android:background="@color/transparent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="@id/password_id"
        app:layout_constraintTop_toTopOf="@id/password_id"
        app:layout_constraintStart_toStartOf="@id/password_id"
        app:layout_constraintHorizontal_bias="0.9"
        android:drawableTint="@color/gray"

        />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/remember_me_checkbox_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/password_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/remember_me_id"
        app:layout_constraintHorizontal_bias="0.95"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/remember_me_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/remember_me"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="18dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sing_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remember_me_id"
        android:background="@drawable/sign_in_up_shape"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:transformPivotX="23dp"
        android:elevation="4dp"
        android:translationZ="4dp"
        android:layout_margin="16dp"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/round_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sing_up_button"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/or_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sing_up_button"
        android:layout_marginTop="24dp"
        android:text="@string/or_continue_with"
        android:textSize="18sp"
        android:background="@color/white"
        android:padding="12dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebook_frame_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/or_id"
        app:layout_constraintEnd_toStartOf="@id/google_frame_id"
        android:background="@drawable/round_corners"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/facebook_1_svgrepo_com"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google_frame_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corners"
        app:layout_constraintEnd_toStartOf="@id/apple_frame_id"
        app:layout_constraintStart_toEndOf="@id/facebook_frame_id"
        app:layout_constraintTop_toBottomOf="@id/or_id"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/google_logo_search_new_svgrepo_com"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apple_frame_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toEndOf="@id/google_frame_id"
        app:layout_constraintTop_toBottomOf="@id/or_id"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_corners"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/apple_logo_svgrepo_com"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sign_up_id"
        app:layout_constraintTop_toBottomOf="@id/facebook_frame_id"
        android:layout_marginTop="18dp"
        android:text="@string/don_t_have_an_account"
        android:textSize="16sp"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.9"/>

    <TextView
        android:id="@+id/sign_up_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/facebook_frame_id"
        android:text="@string/sign_in"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintHorizontal_bias="0.7"
        android:textSize="18sp"
        android:textStyle="bold"
        />














</androidx.constraintlayout.widget.ConstraintLayout>