<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_corners">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_id"
        android:src="@drawable/location_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_id"
        app:layout_constraintStart_toEndOf="@id/location_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginStart="12dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        tools:text="terjola"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fire_number_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="33dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="2332"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fire_icon"
        app:layout_constraintEnd_toStartOf="@id/fire_number_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/fire_icon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="$300"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/title_id"
        app:layout_constraintBottom_toTopOf="@id/price_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        tools:text="sofeli chxari"
        android:textSize="32sp"
        android:layout_marginBottom="14dp"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:saveEnabled="false"
        android:focusable="false"
        android:clickable="false"
        android:numStars="5"
        android:rating="2"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:progressTint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>