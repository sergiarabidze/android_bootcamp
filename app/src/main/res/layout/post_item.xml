<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/post_shape"
    android:layout_marginBottom="12dp"
    android:paddingBottom="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/profile_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundImageShape"
        tools:src="@color/black"
        android:scaleType="centerCrop"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"/>
    
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_id"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/profile_pic"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="givi"
        android:fontFamily="@font/fira_bold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_id"
        app:layout_constraintStart_toEndOf="@id/profile_pic"
        app:layout_constraintTop_toBottomOf="@id/username_id"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/fira_light"
        android:textColor="@color/date_text_color"
        tools:text="samshabats 2-ze"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:fontFamily="@font/fira_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/white"
        android:maxLines="3"
        tools:text="Weâ€™re interested in your ideas and would be glad to build something bigger out of it. "
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post_images"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description">

       <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="6dp"
            app:shapeAppearanceOverlay="@style/RoundImageShape" />

=        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_margin="6dp"
            android:padding="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image1"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundImageShape" />

=        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:padding="6dp"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image1"
            app:layout_constraintTop_toBottomOf="@id/image2"
            app:shapeAppearanceOverlay="@style/RoundImageShape" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_images"
        android:layout_marginTop="16dp"
        android:background="@color/line_color"
        android:layout_marginHorizontal="19dp"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comments_icon_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_id"
        android:layout_marginTop="18dp"
        android:layout_marginStart="19dp"
        android:src="@drawable/comments_icon"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comments_amount"
        app:layout_constraintStart_toEndOf="@id/comments_icon_id"
        app:layout_constraintTop_toBottomOf="@id/line_id"
        android:textColor="@color/date_text_color"
        android:textSize="14sp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        tools:text="comments 3"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likes_icon_id"
        app:layout_constraintStart_toEndOf="@id/comments_amount"
        app:layout_constraintTop_toBottomOf="@id/line_id"
        android:layout_marginTop="18dp"
        android:layout_marginStart="19dp"
        android:src="@drawable/heart"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likes_amount"
        app:layout_constraintStart_toEndOf="@id/likes_icon_id"
        app:layout_constraintTop_toBottomOf="@id/line_id"
        android:textColor="@color/date_text_color"
        android:textSize="14sp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="13dp"
        tools:text="32"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_icon_id"
        app:layout_constraintStart_toEndOf="@id/likes_amount"
        app:layout_constraintTop_toBottomOf="@id/line_id"
        android:layout_marginTop="18dp"
        android:layout_marginStart="19dp"
        android:src="@drawable/share"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_text"
        app:layout_constraintStart_toEndOf="@id/share_icon_id"
        app:layout_constraintTop_toBottomOf="@id/line_id"
        android:textColor="@color/date_text_color"
        android:textSize="14sp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="14dp"
        android:text="@string/share"
        />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_full_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments_amount"
        android:layout_marginTop="21dp"
        android:background="@color/line_color" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/commentator_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_full_id"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user"
        android:background="@color/commentator_background"
        app:shapeAppearanceOverlay="@style/RoundImageShape"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_id"
        android:background="@drawable/custom_edit_text"
        app:layout_constraintStart_toEndOf="@id/commentator_icon"
        app:layout_constraintTop_toBottomOf="@id/line_full_id"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:paddingVertical="13dp"
        android:paddingHorizontal="16dp"
        android:hint="@string/write_comment"
        android:textColorHint="@color/tint_color"
        android:drawableEnd="@drawable/clip_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>