<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgroundabstract"
        android:scaleType="centerCrop"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="@string/user_registration"
        android:layout_margin="32dp"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/first_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1AFFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/edit_text_margin"
        android:layout_marginEnd="@dimen/edit_text_margin"
        android:hint="@string/first_name"
        android:textColorHint="@color/input_background"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_id"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/last_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1AFFFFFF"
        android:layout_marginTop="@dimen/button_margin_dp"
        android:layout_marginStart="@dimen/edit_text_margin"
        android:layout_marginEnd="@dimen/edit_text_margin"
        android:hint="@string/last_name"
        android:textColorHint="@color/input_background"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_name_id"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/age_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1AFFFFFF"
        android:layout_marginTop="@dimen/button_margin_dp"
        android:layout_marginStart="@dimen/edit_text_margin"
        android:layout_marginEnd="@dimen/edit_text_margin"
        android:hint="@string/age"
        android:textColorHint="@color/input_background"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_name_id"
        android:inputType="number"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1AFFFFFF"
        android:layout_marginTop="@dimen/button_margin_dp"
        android:layout_marginStart="@dimen/edit_text_margin"
        android:layout_marginEnd="@dimen/edit_text_margin"
        android:hint="@string/email"
        android:textColorHint="@color/input_background"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age_id"
        android:inputType="textEmailAddress"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/success_error_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_id"
        app:layout_constraintHorizontal_bias="0.05"
        android:visibility="visible"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_user_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/button_margin_dp"
        android:text="@string/add_user"
        app:layout_constraintEnd_toEndOf="@id/remove_user_btn_id"
        app:layout_constraintTop_toBottomOf="@id/email_id"
        app:layout_constraintHorizontal_bias="0.25"
        android:paddingStart="@dimen/button_padding"
        android:paddingEnd="@dimen/button_padding"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/remove_user_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin_dp"
        android:text="@string/remove_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_id"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_user_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin_dp"
        android:text="@string/update_user"
        app:layout_constraintStart_toStartOf="@id/remove_user_btn_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_id"
        app:layout_constraintHorizontal_bias="0.75"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/added_users_counter_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/button_margin_dp"
        app:layout_constraintTop_toBottomOf="@id/add_user_btn_id"
        android:textSize="24sp"
        android:text="@string/active_users"
        android:textColor="@color/white"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deleted_users_counter_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/added_users_counter_id"
        android:text="@string/deleted_users"
        android:textSize="24sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>

