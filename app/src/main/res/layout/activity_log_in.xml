<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableStart="@drawable/union"
        android:padding="5dp"
        android:background="@color/transparent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textColor="@color/black"
        android:letterSpacing="-0.015"
        android:fontFamily="sans-serif-condensed"
        android:textSize="40sp"
        android:layout_margin="20dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:background="@drawable/rectangle_border"
        android:inputType="textEmailAddress"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:background="@drawable/rectangle_border"
        android:inputType="textPassword"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/log_in_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in_upper_cade"
        android:textSize="20sp"
        android:padding="15dp"
        android:background="@drawable/black_rounded_rectangle"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.04"
        android:layout_margin="10dp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>