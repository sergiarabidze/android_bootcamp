<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/recycler_custom"
    android:id="@+id/recycler_view"
    android:layout_marginVertical="6dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/photo_id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="@id/recycler_view"
        app:layout_constraintTop_toTopOf="@id/recycler_view"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/photo_custom"
        android:src="@drawable/blackchairjpg"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/photo_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        tools:text="taburetka chair"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/color_id"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toEndOf="@id/photo_id"
        app:layout_constraintTop_toBottomOf="@id/title_id"
        android:layout_marginStart="24dp"
        android:background="@drawable/red_custom"
        android:layout_marginTop="12dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/color_quantity_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@id/color_id"
        app:layout_constraintTop_toBottomOf="@id/title_id"
        tools:text="chair"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/status_id"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/color_id"
        app:layout_constraintStart_toEndOf="@id/photo_id"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/completed_button"
        tools:text="Completed"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/status_id"
        app:layout_constraintStart_toEndOf="@id/photo_id"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="18dp"
        android:textSize="16sp"
        tools:text="oci lari"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="44dp"
        android:text="@string/buy_again"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="12dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/but_again_custom"/>

</androidx.constraintlayout.widget.ConstraintLayout>
